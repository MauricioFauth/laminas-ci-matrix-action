{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "lib": ["es2015", "es2017"],
        "strict": true,
        "alwaysStrict": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "outDir": "dist/compiled"
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
}
